+static const struct udevice_id pcie_sifive_ids[] = {
+	{ .compatible = "sifive,fu740-pcie" },
+	{ .compatible = "sifive,fu740-pcie-ecam" },
+	{}
+};
+
+U_BOOT_DRIVER(pcie_sifive) = {
+	.name			= "pcie_sifive",
+	.id			= UCLASS_PCI,
+	.of_match		= pcie_sifive_ids,
+	.ops			= &pcie_sifive_ops,
